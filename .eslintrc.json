{
    "root": true,
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "globals": {
        "describe": true,
        "expect": true,
        "should": true
    },
    "rules": {
        "class-methods-use-this": 0,
        "comma-dangle": 0,
        "consistent-return": 0,
        "curly": ["error", "multi-line"],
        "import/no-unresolved": [2, { "commonjs": true }],
        "max-len": [1, 80, 2, { "ignoreUrls": true, "ignoreStrings": true, "ignoreTemplateLiterals": true }],
        "new-cap": 0,
        "no-param-reassign": 0,
        "no-tabs": 0,
        "no-unused-vars": 0,
        "no-shadow": ["error", { "allow": ["done", "req", "res", "err"] }],
        "one-var": 0,
        "one-var-declaration-per-line": 0,
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true
            }
        }],
        "valid-jsdoc": ["error", {
          "requireReturn": true,
          "requireReturnType": true,
          "requireParamDescription": false,
          "requireReturnDescription": true
        }]
    }
}
